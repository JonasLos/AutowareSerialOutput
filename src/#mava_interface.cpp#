#include <ros/ros.h>
#include <serial/serial.h>
#include <std_msgs/String.h>
#include <std_msgs/Empty.h>
#include <autoware_msgs/VehicleCmd.h>

serial::Serial ser;

void write_callback_Steer(const autoware_msgs::VehicleCmdConstPtr& msg){
    ROS_INFO_STREAM("Writing to serial port" << msg->data);
    ser.write(msg->data);
}

void write_callback_Brake(const autoware_msgs::VehicleCmdConstPtr& msg){
    ROS_INFO_STREAM("Writing to serial port" << msg->data);
    ser.write(msg->data);
}


void write_callback_Accel(const autoware_msgs::VehicleCmdConstPtr& msg){
    ROS_INFO_STREAM("Writing to serial port" << msg->data);
    ser.write(msg->data);
}


int main (int argc, char** argv){
    ros::init(argc, argv, "mava_serial_interface");
    ros::NodeHandle nh;

    ros::Subscriber write_sub_Steer = nh.subscribe("SteerCmd", 1000, write_callback_Steer);
    ros::Subscriber write_sub_Brake = nh.subscribe("SteerCmd", 1000, write_callback_Brake);
    ros::Subscriber write_sub_Accel = nh.subscribe("SteerCmd", 1000, write_callback_Accel);


    try
    {
        ser.setPort("/dev/ttyACM0");
        ser.setBaudrate(9600);
        serial::Timeout to = serial::Timeout::simpleTimeout(1000);
        ser.setTimeout(to);
        ser.open();
    }
    catch (serial::IOException& e)
    {
        ROS_ERROR_STREAM("Unable to open port ");
        return -1;
    }

    if(ser.isOpen()){
        ROS_INFO_STREAM("Serial Port initialized");
    }else{
        return -1;
    }

    ros::Rate loop_rate(5);
    while(ros::ok()){

        ros::spinOnce();

    }
}
